apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: ecommerce
  namespace: argocd
spec:
  project: default
  source:
    repoURL: 'https://github.com/babsontimie/ecommerce-gitops.git'
    targetRevision: main
    path: ../helmchart/ecommerce
    helm:
      valueFiles:
        - values-dev.yaml   # or values-sit.yaml / values-prod.yaml
  destination:
    server: https://kubernetes.default.svc
    namespace: ecommerce
  syncPolicy:
    automated:
      prune: true
      selfHeal: true

